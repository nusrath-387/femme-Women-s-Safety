<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7EFFFF99"
    tools:context=".sendOTP">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/send"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"

        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"

        android:layout_marginLeft="120dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send you an One Time password on this mobile"
        android:textSize="15sp"
        android:textColor="#D5090015"
        android:layout_marginLeft="@dimen/_42sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter  mobile number"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="#D7090015"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="117dp"
        />
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="+880-"
         android:textSize="17sp"
         android:layout_marginLeft="131sp"
         />
<EditText
    android:id="@+id/mobile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:textSize="17sp"
    android:hint="xxxxxxxxxxx"
    android:layout_marginLeft="5dp"
    android:background="@null"
    android:imeOptions="actionNone"
    />

 </LinearLayout>
    <View
        android:layout_width="270dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <ProgressBar
        android:id="@+id/progress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/getOTP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="GET OTP"
        android:layout_marginLeft="49dp"
        android:backgroundTint="#5B8FF4"
        android:layout_marginTop="10dp"
        />


</LinearLayout>